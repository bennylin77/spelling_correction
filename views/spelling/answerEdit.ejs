<!DOCTYPE html>
<html lang="en">
	<%- include('../layouts/head') %>
	<body>
	<%- include('../layouts/menu') %>
	<div class="container">
	  <div class="row">
	    <div class="col">
				<div class="card" style="margin-top: 50px;">
				  <div class="card-header">
						<%= cat.question%>
				  </div>
				  <div class="card-body">
						<ul class="list-inline">
							<% for( ans of cat.answers ){%>
							<li class="list-inline-item"><%= ans.answer%>, </li>
							<% } %>
						</ul>


						<form method="POST" action="/spelling/cats/<%=cat.id %>">
							<input type="hidden" name="id" value="<%=cat.id %>">
							<%incorrect = cat.incorrect.map(function(x){ return x.toLowerCase() })%>
							<%incorrect = Array.from(new Set(incorrect)) %>
							<% for( var j of incorrect ){ %>
								<div class="form-group row">
							    <label for="inputEmail3" class="col-sm-2 col-form-label"><%= j.toLowerCase()%></label>
							    <div class="col-sm-10">
							      <input type="text" class="form-control" name="<%= j.toLowerCase() %>" placeholder="">
							    </div>
							  </div>
							<% } %>
							<div class="form-group row">
								<div class="col-sm-10">
						  		<button type="submit" class="btn btn-outline-primary">Submit</button>
								</div>
							</div>
						</form>


				  </div>
					<div class="card-footer bg-transparent text-right text-secondary"><small><%= cat.id %></small></div>
				</div>


			</div>
		</div>
	</div>


	</body>
</html>
